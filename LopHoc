
package duanoop;
import java.util.Scanner;
public class LopHoc {
    String maLop;
    GiaoVien gv=new GiaoVien();
    DSHocSinh dshs =new DSHocSinh(40);
    ThoiKhoaBieu tkb=new ThoiKhoaBieu();

    public LopHoc(){
    }

    public LopHoc(String maLop, GiaoVien gv, DSHocSinh dshs, ThoiKhoaBieu tkb){
        this.maLop = maLop;
        this.gv = gv;
        this.dshs = dshs;
        this.tkb = tkb;
    }

    public String getmaLop(){
        return maLop;
    }

    public void setmaLop(String maLop){
        this.maLop = maLop;
    }

    public GiaoVien getGv() {
        return gv;
    }

    public void setGv(GiaoVien gv) {
        this.gv = gv;
    }

    public DSHocSinh getDshs() {
        return dshs;
    }
    public void setDshs(DSHocSinh dshs) {
        this.dshs = dshs;
    }

    public ThoiKhoaBieu getTkb() {
        return tkb;
    }
    public void setTkb(ThoiKhoaBieu tkb) {
        this.tkb = tkb;
    }
    
    
    public void nhapLop(){
        Scanner sc = new Scanner(System.in);
        System.out.println("Nhap ma lop :");
        maLop = sc.nextLine();
        System.out.println("Nhap giao vien chu nhiem :");
        gv.nhap();
        System.out.println("Nhap danh sach hoc sinh :");
        dshs.nhapDSHS();  
        System.out.println("Nhap thoi khoa bieu :");
        tkb.nhapTKB();
    }
    public void xuatLop(){
       System.out.println("Ma lop: "+maLop);
       System.out.println("------------------------");
       System.out.println("Giao vien chu nhiem :");
       gv.xuat();
       System.out.println("------------------------");
       System.out.println("Danh sach hoc sinh ");
       dshs.xuatDSHS();
       System.out.println("------------------------");
       System.out.println("Danh sach hoc sinh :");
       tkb.xuatTKB();
    }
}
